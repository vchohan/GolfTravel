<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/golf_round_info_card_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorGrey100"
        card_view:cardElevation="24dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

        <ImageView
                android:id="@+id/remove_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_clear_black_24dp" />

        <ImageView
                android:id="@+id/like_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_star_border_black_24dp" />


    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:weightSum="3">

        <ImageView
                android:id="@+id/golf_course_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_app_launcher"
                android:layout_weight="2"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/golf_course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course Name" />

            <TextView
                    android:id="@+id/golf_play_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Played" />

            <TextView
                    android:id="@+id/golf_play_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Played" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>